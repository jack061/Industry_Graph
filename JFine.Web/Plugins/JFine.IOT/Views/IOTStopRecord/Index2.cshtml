<script>
    $(function () {
        $('#layout').layout();
        treeView();
        gridList();
    });
    function treeView() {
        $("#itemTree").treeview({
            url: "/SysCommon/Items/GetTreeJson",
            onnodeclick: function (item) {
                $("#txt_keyword").val('');
                $('#btn_search').trigger("click");
            }
        });
    }
    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/IOT/IOTStopRecord/GetAllList",
            height: $(window).height() - 96,
            colModel: [
					  	
					{ label: "主键", name: "Id", width: 150, align: 'left' },
	  	
					{ label: "BindId:设备Id", name: "BindId", width: 150, align: 'left' },
	  	
					{ label: "停机编码", name: "StopReasonCode", width: 150, align: 'left' },
	  	
					{ label: "停机名称", name: "StopReasonName", width: 150, align: 'left' },
	  	
					{ label: "停机开始时间", name: "StopStartTime", width: 150, align: 'left' },
	  	
					{ label: "停机结束时间", name: "StopEndTime", width: 150, align: 'left' },
	  	
					{ label: "创建日期", name: "CreateDate", width: 150, align: 'left' },
	  	
					{ label: "创建用户账户", name: "CreateUserId", width: 150, align: 'left' },
	  	
					{ label: "创建用户名称", name: "CreateUserName", width: 150, align: 'left' },
	  	
					{ label: "最后修改时间", name: "UpdateDate", width: 150, align: 'left' },
	  	
					{ label: "最后修改用户", name: "UpdateUserId", width: 150, align: 'left' },
	  	
					{ label: "最后修改用户名称", name: "UpdateUserName", width: 150, align: 'left' },
 
            ]
        });
        $("#btn_search").click(function () {
			var queryJson = {
				 itemId: $("#itemTree").getCurrentNode().id,
                keyword: $("#txt_keyword").val()
            }
            $gridList.jqGrid('setGridParam', {
                postData: { queryJson: JSON.stringify(queryJson) }, page: 1
            }).trigger('reloadGrid');
        });
    }
    function btn_add() {
        $.modalOpen({
            id: "Form",
            title: "新增停机记录",
            url: "/IOT/IOTStopRecord/Form",
            width: ($(window).width() * 0.8) + "px",
            height: ($(window).height() * 0.7) + "px",
            callBack: function (iframeId) {
                top.frames[iframeId].submitForm();
            }
        });
    }
    function btn_edit() {
		var keyValue = $("#gridList").jqGridRowValue().Id;
        if ($.checkedArray(keyValue))
        {
			$.modalOpen({
				id: "Form",
				title: "修改停机记录",
				url: "/IOT/IOTStopRecord/Form?keyValue=" + keyValue,
				width: ($(window).width() * 0.8) + "px",
                height: ($(window).height() * 0.7) + "px",
				callBack: function (iframeId) {
					top.frames[iframeId].submitForm();
				}
			});
        }
        
    }
    function btn_delete() {
	  var keyValue = $("#gridList").jqGridRowValue().Id;
	 if ($.checkedArray(keyValue))
        {
			 $.deleteForm({
				url: "/IOT/IOTStopRecord/DeleteForm",
				param: { keyValue: keyValue },
				success: function () {
					$.currentWindow().$("#gridList").trigger("reloadGrid");
				}
			});
        }
        
    }
    function btn_details() {
	    var keyValue = $("#gridList").jqGridRowValue().Id;       
		if ($.checkedArray(keyValue))
		 {
			$.modalOpen({
				id: "Details",
				title: "查看停机记录",
				url: "/IOT/IOTStopRecord/Details?keyValue=" + keyValue,
				width: "550px",
				height: "620px",
				btn: null,
			});
		  }    
    } 
	function refreshGrid() {
        $("#gridList").trigger("reloadGrid");
	 }     
</script>


