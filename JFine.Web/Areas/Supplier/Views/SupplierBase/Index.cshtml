    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/Supplier/SupplierBase/GetGridJson",
            height: $(window).height() - 138,
            colModel: [
					  	
					{ label: "主键", name: "Id", width: 150, align: 'left',hidden:true },
	  	
					{ label: "BindId", name: "BindId", width: 150, align: 'left', hidden: true },
	  	
