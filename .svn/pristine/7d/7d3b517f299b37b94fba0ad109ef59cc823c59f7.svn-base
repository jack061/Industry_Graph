    function gridList() {
        var $gridList = $("#gridList");
        $gridList.dataGrid({
            url: "/IOT/IOTOrder/GetOrderList?flag=1",
            height: $(window).height() - 170,
            colModel: [

					{ label: "主键", name: "Id", width: 150, align: 'left', hidden: true },

