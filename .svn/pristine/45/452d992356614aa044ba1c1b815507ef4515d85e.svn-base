            border: 5px solid blue;
            float: left;
            margin: 5px;
        }
            .blockDiv span {
                position: relative;
                top: 40%;
                left: 15%;
                font-size: 45px;
                color: white;
            }
            .blockDiv span:first-child{
                color:darkolivegreen;
            }

        .blockDiv_list {
            width: 40%;
            height: 40%;
            float: left;
            margin: 5px;
        }
         .blockDiv_list span {
                position: relative;
                top: 40%;
                left: 15%;
                font-size: 15px;
                color: white;
            }

    </style>
    <script>
        $(function () {
            $(".blockDiv_list").parent().click(function () {
                $(this).siblings('div').removeClass('selected');  // 删除其他兄弟元素的样式

                $(this).addClass('selected');                            // 添加当前元素的样式
            });
        })
    </script>
